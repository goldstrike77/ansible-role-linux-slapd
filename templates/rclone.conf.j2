[slapd]
type = {{ slapd_backupset_arg.cloud_drive }}
{% if slapd_backupset_arg.cloud_drive == 'azureblob' %}
account = {{ slapd_backupset_arg.cloud_config.account }}
key = {{ slapd_backupset_arg.cloud_config.key }}
endpoint = {{ slapd_backupset_arg.cloud_config.endpoint }}
{% endif %}
{% if slapd_backupset_arg.cloud_drive == 's3' %}
provider = Minio
env_auth = false
access_key_id = {{ slapd_backupset_arg.cloud_config.access_key }}
secret_access_key = {{ slapd_backupset_arg.cloud_config.secret_key }}
region = us-east-1
endpoint = {{ slapd_backupset_arg.cloud_config.endpoint }}
location_constraint =
server_side_encryption =
{% endif %}
